mixin alert-success(time)
    - if (messages.success)
        .message.info
            p(
                class="alert alert-success"
                data-time=time
                show-alert
            ) !{messages.success}
            //- <span close-alert>X</span>
            

mixin alert-error(time)
    - if (messages.error)
        .message.info
            p(
                class="alert alert-danger"
                data-time=time
                show-alert
            ) !{messages.error} 
            //- <span close-alert>X</span>