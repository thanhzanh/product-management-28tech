extend ../../layouts/default.pug 

block main 
    h1(class="mb-4") Trang thông tin cá nhân

    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-4")
    else 
        img(src="/admin/images/avatar.png" width="150px" class="mb-4")

    if(user.fullName)
        p Họ tên: <b> #{user.fullName} </b>

    if(user.email)
        p Email: <b> #{user.email} </b>

    if(user.phone)
        p Số điện thoại: <b> #{user.phone} </b>

    if(user.status)
        span Trạng thái: 
        span
            <b> #{user.status == "active" ? "Hoạt động" : "Dừng hoạt động" } </b>

    if(role.title)
        p Phân quyền: <b> #{role.title} </b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin