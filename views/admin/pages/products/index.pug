extend ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/momentDateTime.pug

block main
    if(role.permissions.includes("products-view"))
    
        +alert-success("5000")
        
        h1 Danh sách sản phẩm

        .card.mb-3 
            .card-header Bộ lọc và Tìm kiếm 
            .card-body 
                .row 
                    .col-6 
                        +filterStatus(filterStatus)

                    .col-6 
                        +search(keyword)

        .card.mb-3 
            .card-header Sắp xếp
            .card-body 
                .row 
                    .col-3 
                        +sort()



        .card.mb-3 
            .card-header Danh sách sản phẩm 
                .card-body
                    .row 
                        .col-8
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                        .col-4 
                            if(role.permissions.includes("products-edit"))
                                a(
                                    href=`${prefixAdmin}/products/create`
                                    class="btn btn-outline-success"
                                ) + Thêm mới sản phẩm

                    table(
                        class="table table-hover table-sm"
                        checkbox-multi
                    )
                        thead 
                            tr 
                                th 
                                    input(type="checkbox" name="checkall")
                                th STT
                                th Hình ảnh
                                th Tiêu đề
                                th Giá
                                th Vị trí
                                th Trạng thái
                                th Người tạo
                                th Người cập nhật
                                th Hành động
                        tbody 
                            each p, index in products
                                tr 
                                    td 
                                        input(
                                            type="checkbox"
                                            name="id"
                                            value=p.id
                                        )
                                        //- index luôn bắt đầu từ 0, trang 2: 4*(2-1)+(0+1)=5 => bắt đầu từ STT 5 bên trang 2, trang 3 4 5 tương tự
                                    td #{pagination.limitItem * (pagination.currentPage - 1) + (index + 1)} 
                                    td 
                                        img(src=p.thumbnail, alt= p.title width="100px" heigh="auto")
                                    td #{p.title}
                                    td #{p.price}$
                                    td 
                                        input(
                                            type="number"
                                            value=p.position 
                                            style="width: 60px"
                                            min="1"
                                            name="position"
                                        )
                                    td
                                        if(role.permissions.includes("products-edit"))
                                            if(p.status === "active")
                                                a(
                                                    href="javascript:;"
                                                    data-status= p.status 
                                                    data-id= p.id
                                                    button-change-status
                                                    class="badge badge-success"
                                                ) Hoạt động
                                            else 
                                                a(
                                                    href="javascript:;" 
                                                    data-status= p.status 
                                                    data-id= p.id
                                                    button-change-status
                                                    class="badge badge-danger"
                                                ) Dừng hoạt động

                                    td 
                                        p #{p.accountFullName}
                                        +momentDateTime(p.createdBy.createdAt)

                                    td 
                                        - const updatedBy = p.updatedBy[p.updatedBy.length-1];
                                        if(updatedBy)
                                            p #{updatedBy.accountFullName}
                                            p
                                                +momentDateTime(updatedBy.updatedAt)
                                    
                                    td 
                                        if(role.permissions.includes("products-view"))
                                            a(
                                                href=`${prefixAdmin}/products/detail/${p.id}`
                                                class="btn btn-secondary btn-sm"  
                                            ) Chi tiết
                                        if(role.permissions.includes("products-edit"))                                       
                                            a(
                                                href=`${prefixAdmin}/products/edit/${p.id}`
                                                class="btn btn-warning btn-sm"  
                                            ) Sửa 
                                        if(role.permissions.includes("products-delete"))                                      
                                            button(
                                                class="btn btn-danger btn-sm ml-1"
                                                button-delete
                                                data-id=p.id
                                            ) Xóa

        +pagination(pagination)

        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        ) 

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products/delete`
        ) 

        script(src="/admin/js/product.js")
        script(src="/admin/js/script.js")
