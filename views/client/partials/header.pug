include ../mixins/sub-menu.pug

header.header 
    .container
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/images/pepsi.webp", alt="Logo")

            .col-4
                form(
                    action='/search'
                    method='GET'
                )
                    div(class="form-group d-flex mb-8")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                        )
                        button(
                            class="btn btn-primary"
                            type="submit"
                        ) Tìm


        .row
            .col-12
                .inner-menu    
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu") 
                            - const pathProduct = "/products";
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductCategory, pathProduct)
                        li 
                            a(href="/article") Bài viết
                        li 
                            a(href="/cart") Giỏ hàng ( #{miniCart ? miniCart.totalQuantity : 0} )
                        li 
                            a(href="/user/register") Đăng ký
