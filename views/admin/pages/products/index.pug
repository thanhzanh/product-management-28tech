extend ../../layouts/default.pug

block main
    h1 Danh sách sản phẩm

    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        tbody 
            each p, index in products
                tr 
                    td #{index + 1}
                    td 
                        img(src=p.thumbnail, alt= p.title width="100px" heigh="auto")
                    td #{p.title}
                    td #{p.price}$
                    td
                        if(p.status === "active")
                            a(href="#" class="badge badge-success") Hoạt động
                        else 
                            a(href="#" class="badge badge-danger") Dừng hoạt động

                    td 
                        button(class="btn btn-warning btn-sm") Sửa 
                        button(class="btn btn-danger btn-sm ml-1") Xóa
