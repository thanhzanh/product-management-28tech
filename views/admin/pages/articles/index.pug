extend ../../layouts/default.pug 
include ../../mixins/table-tree.pug
include ../../mixins/alert.pug 
include ../../mixins/filterStatus.pug 
include ../../mixins/search.pug 
include ../../mixins/pagination.pug 
include ../../mixins/formChangeMulti.pug 
include ../../mixins/sort.pug 


block main 
    +alert-success(5000)
    +alert-error(5000)

    h1 Danh sách bài viết 
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            .row 
                .col-6 
                    +filterStatus(filterStatus)
                .col-6 
                    +search(keyword)

    .card.mb-3 
        .card-header Sắp xếp
        .card-body 
            .row 
                .col-3 
                    +sortArticle()


    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8 
                    +form-change-multi(`${prefixAdmin}/articles/change-multi?_method=PATCH`)
                .col-4 
                    a(
                        href=`${prefixAdmin}/articles/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới bài viết

            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead
                    tr 
                        th 
                            input(type="checkbox" name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái
                        th Người tạo 
                        th Người chỉnh sửa
                        th Hành động
                tbody 
                    +table-tree-articles(data, 1)

    //- PAGINATION
    +pagination()

    //- DELETE
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/articles/delete`
    )

    //- CHANGE STATUS 
    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/articles/change-status`
    )

    script(src="/admin/js/script.js") 

    

    
                    
